<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="news" translate="label" sortOrder="10">
            <label>News</label>
        </tab>
        <section id="site_news" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
